{
  "name": "htcpp",
  "displayName": "htcpp",
  "description": "Syntax highlighting for the htcpp template format used by hypertextcpp - a C++ HTML templating system",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "htcpp",
      "aliases": ["htcpp", "htcpp"],
      "extensions": ["htcpp"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [
      {
        "path": "./syntaxes/cpp-extension.json",
        "scopeName": "cpp.extension",
        "injectTo": ["template.htcpp"]
      },
      {
        "language": "htcpp",
        "scopeName": "template.htcpp",
        "path": "./syntaxes/htcpp.tmLanguage.json"
      }
    ]
  },
  "publisher": "kamchatka-volcano",
  "repository": {
    "type": "git",
    "url": "https://github.com/kamchatka-volcano/htcpp-vscode"
  },
  "license": "MS-PL",
  "keywords": [
    "hypertextcpp",
    "htcpp"    
  ],
  "icon": "icon.png"
}
